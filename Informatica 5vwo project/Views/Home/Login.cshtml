@model Informatica_5vwo_project.Databases.Person

@{
    ViewData["Title"] = "login pagina";
}

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="login-content">

    <h1 class="titel">@ViewData["Title"]</h1>
    <div class="blok">
        <p>Welkom, @ViewData["user"]</p>
        <p>Je wachtwoord is: @ViewData["password"]</p>

        <form method="post">
            <p>Gebruikersnaam:</p>
            <div><input type="text" name="username" placeholder="Uw gebruikersnaam" /></div>
            <p>Wachtwoord:</p>
            <div><input type="text" name="password" placeholder="Uw wachtwoord" /></div>
            <div><input type="submit" value="Log in" /></div>
        </form>
    </div>
</div>

<style>
    input {
        width: 25%;
        padding: 1vh 1vw;
        border: solid #999;
        border-radius: 5px;
        background-color: #eee;
        box-sizing: border-box;
    }


    input[type=submit] {
        margin-top: 1vw;
        margin-bottom: 1vw;
        padding: 1vh 1vw;
        border: solid #888;
        border-radius: 5px;
        background-color: #bbb;
    }

</style>