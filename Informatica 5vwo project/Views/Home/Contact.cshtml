@model Informatica_5vwo_project.Databases.Contactform

@{
    ViewData["Title"] = "Contact pagina";
}

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="contact-content">
    <h1 class="titel">@ViewData["Title"]</h1>

    <div class="blok">
        <form method="post">
            <p>Email:</p>
            <div><input type="text" name="email" placeholder="voorbeeld@gmail.com" /></div>
            <p class="verplicht">@Html.ValidationMessageFor(m => m.Email)</p>

            <p>Bericht:</p>
            <div><input type="text" name="bericht" placeholder="Uw wachtwoord" /></div>
            <p class="verplicht">@Html.ValidationMessageFor(m => m.Bericht)</p>

            <div><input type="submit" value="verstuur" /></div>
        </form>
    </div>

</div>
