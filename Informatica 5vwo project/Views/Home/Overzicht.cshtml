@using Informatica_5vwo_project.Databases
@model List<Films>

@{
    ViewData["Title"] = "overzicht pagina";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="overzicht-content">
    <h1>Alle films!</h1>
    <div class="films">
        @foreach (Films p in Model)
        {
        <div class="film-info">
            <a class="poster" href="/details/@p.Id"><img src="@p.Poster"/></a>
            <div class="film-text">
                <p class="naam"><a href="/details/@p.Id">@p.Naam</a></p>
                <p>Genre(s): @p.Genres</p>
                <p>Taal en leeftijd: @p.Taal, @p.Leeftijd</p>
                <p class="description">@p.Beschrijving</p>
            </div>
        </div>
        }
    </div>
    
</div>

